@using Microsoft.AspNetCore.Identity
@model Lab_2.Models.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Thêm vai trò mới";
}

<div class="container mt-4">
    <h2 class="text-center">Tạo role</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" required />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-grid mt-3">
            <button type="submit" class="btn btn-success">Thêm vai trò</button>
        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách vai trò</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}